<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.seller.OrderDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:background="@drawable/back_toolbar_blue">

        <ImageView
            android:id="@+id/img_back"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/btn_back"
            app:tint="@color/colorWhite"/>

        <TextView
            style="@style/lbl.white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/order_detail_title" />

        <ImageView
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="48dp"
                android:layout_marginStart="@dimen/padding"
                android:layout_marginEnd="@dimen/padding"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white_24"
                android:elevation="2dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_marginTop="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/lbl.black"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="@string/normal_profile" />

                    <TextView
                        android:id="@+id/lbl_time"
                        style="@style/lbl.black"
                        android:textStyle="bold"
                        android:layout_marginEnd="24dp"
                        android:layout_alignParentEnd="true"
                        android:text="1d ago"
                        android:textColor="@color/colorBlue"/>
                </RelativeLayout>



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_marginTop="20dp"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    app:civ_border_color="@color/colorGray"
                    app:civ_border_width="1dp"
                    android:src="@drawable/ic_account_circle"/>

                <TextView
                    android:id="@+id/lbl_name"
                    style="@style/lbl.black"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Px. Gabriel Arita" />

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/viw_order_statu"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/back_red_circle"/>

                    <TextView
                        android:id="@+id/lbl_order_status"
                        style="@style/lbl.black"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:text="Progressing"/>

                    <TextView
                        android:id="@+id/lbl_order_rate"
                        style="@style/lbl.black"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:text="5.0"
                        android:textColor="@color/colorYellow"/>

                    <ImageView
                        android:id="@+id/img_star_01"
                        android:layout_marginStart="8dp"
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/img_star_02"
                        android:layout_marginStart="-2dp"
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/img_star_03"
                        android:layout_marginStart="-2dp"
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/img_star_04"
                        android:layout_marginStart="-2dp"
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/img_star_05"
                        android:layout_marginStart="-2dp"
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:src="@drawable/ic_star" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/lbl.black"
                        android:text="@string/reg_gender"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/lbl_gender"
                        style="@style/lbl.black"
                        android:layout_marginStart="12dp"
                        android:text="@string/normal_male"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/lbl.black"
                        android:text="@string/birth_title"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/lbl_birth"
                        style="@style/lbl.black"
                        android:layout_marginStart="12dp"
                        android:text="03-08-1989"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/lbl.black"
                        android:text="@string/normal_location"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/lbl_address"
                        style="@style/lbl.black"
                        android:layout_marginStart="12dp"
                        android:text="City, Departamento"
                        android:textSize="13sp"/>

                    <ImageView
                        android:layout_marginStart="4dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/colorBlue" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lbl_content"
                    style="@style/lbl.black"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp"
                    android:text="In this text box we are going to add
the comment of purchase that a buyer
makes in his home tab"
                    android:textSize="13sp"/>

                <HorizontalScrollView
                    android:id="@+id/sch_images"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:id="@+id/llt_images"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_post"
                    style="@style/btn.blue_grad"
                    android:layout_marginTop="28dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:text="Atender Solicitud"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/llt_post"
                    android:layout_marginTop="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_marginStart="13.5dp"
                        android:layout_marginEnd="13.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#99707070"/>

                    <TextView
                        style="@style/lbl.black"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="35dp"
                        android:text="@string/normal_message"/>

                    <EditText
                        android:id="@+id/txt_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:hint="Envia Mensaje que eres el indicado
para atender la solicitud de este paciente.."
                        android:lines="5"
                        android:textSize="13dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:elevation="2dp"
                        android:background="@drawable/back_message"/>

                    <LinearLayout
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_attach"
                            app:tint="@color/colorGray"
                            android:contentDescription="buyer_home_image_upload_content" />

                        <TextView
                            android:id="@+id/lbl_add_images"
                            style="@style/lbl.black"
                            android:layout_marginStart="8dp"
                            android:text="@string/buyer_home_imgae_upload"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llt_post_images"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <Button
                        android:id="@+id/btn_submit"
                        style="@style/btn.blue_grad"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:text="@string/normal_login"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_marginStart="13.5dp"
                        android:layout_marginEnd="13.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#99707070"/>

                    <TextView
                        android:id="@+id/lbl_reviews"
                        style="@style/lbl.black"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="35dp"
                        android:text="@string/most_recent_reviews"/>

                    <LinearLayout
                        android:id="@+id/llt_reviews"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>